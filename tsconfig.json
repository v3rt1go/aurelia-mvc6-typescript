{
  "compileOnSave": true,
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "system",
    "declaration": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [ "es2015", "dom" ]
  },
  "exclude": [
    "./node_modules",
    "./wwwroot/jspm_packages"
  ],
  "include": [
    "./wwwroot/features/**/*.ts",
    "./wwwroot/test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
